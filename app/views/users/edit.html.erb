<h1>Edit an user:</h1>

<%= form_for @user do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username, placeholder: "your username here" %><br>

  <%= f.label :email %>:
  <%= f.email_field :email, placeholder: "example@example.com" %><br>

  <%= f.label :password %>:
  <%= f.password_field :password %><br>

  <%= f.submit %>
<% end %>

